<nav class="breadcrumb" aria-label="{{ 'accessibility.breadcrumb' | t }}">
  <div class="container">
    <ol class="breadcrumb__list" role="list">
      <li class="breadcrumb__item">
        <a class="breadcrumb__link" href="{{ shop.url }}">{{ 'accessibility.home_link_text' | t }}</a>
      </li>
      {% if product.collections.size > 0 %}
        <li class="breadcrumb__item">
          <a class="breadcrumb__link" href="{{ product.collections[0].url }}">{{ product.collections[0].title }}</a>
        </li>
      {% endif %}
      <li class="breadcrumb__item">
        <a class="breadcrumb__link" aria-current="page">{{ product.title }}</a>
      </li>
    </ol>
  </div>
</nav>