<footer class="footer">
  <div class="container footer__container">
    {% if section.blocks.size > 0 %}
      <div class="footer__top">
        {% for block in section.blocks %}
          {% if block.type == 'About' %}
            <dl class="footer__section">
              {% if block.settings.footer_about_heading_id != blank %}
                <dt class="footer__title">
                  {{ block.settings.footer_about_heading_id }}
                </dt>
              {% endif %}
              <dd class="footer__descr">
                {% if block.settings.footer_about_text_id != blank %}
                  {{ block.settings.footer_about_text_id }}
                {% endif %}
                <span
                  class="visually-hidden"
                  aria-hidden="true"
                  id="social_media_footer">Social media links</span>
                <ul
                  class="offset-x footer__socials socials"
                  aria-labelledby="social_media_footer"
                  role="list">
                  {% if block.settings.footer_about_fb_link_id != blank %}
                    <li class="socials__item">
                      <a
                        class="socials__link"
                        href="{{ block.settings.footer_about_fb_link_id }}"
                        target="_blank"
                        aria-label="Facebook">
                        <svg
                          class="socials__icon"
                          aria-hidden="true"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg">
                          <path
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            d="M16.0269 11.9817H13.4288V21.5H9.49245V11.9817H7.6203V8.63659H9.49245V6.47193C9.49245 4.92396 10.2278 2.5 13.4639 2.5L16.3797 2.5122V5.7592H14.2641C13.917 5.7592 13.4291 5.93258 13.4291 6.671V8.63971H16.3708L16.0269 11.9817Z"
                            fill="#5E626B" />
                        </svg>
                      </a>
                    </li>
                  {% endif %}
                  {% if block.settings.footer_about_instagram_link_id != blank %}
                    <li class="socials__item">
                      <a
                        class="socials__link"
                        href="{{ block.settings.footer_about_instagram_link_id }}"
                        target="_blank"
                        aria-label="Instagram">
                        <svg
                          class="socials__icon"
                          aria-hidden="true"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg">
                          <path d="M16.7071 2.5C19.3502 2.5 21.5 4.65013 21.5 7.29293V16.7071C21.5 19.3502 19.3502 21.5 16.7071 21.5H7.29293C4.65013 21.5 2.5 19.3502 2.5 16.7071V7.29293C2.5 4.65013 4.65013 2.5 7.29293 2.5H16.7071ZM16.7071 4.56779H7.29293C5.7903 4.56779 4.56779 5.7903 4.56779 7.29293V16.7071C4.56779 18.2097 5.7903 19.4326 7.29293 19.4326H16.7071C18.2097 19.4326 19.4326 18.21 19.4326 16.7071V7.29293C19.4326 5.7903 18.21 4.56779 16.7071 4.56779ZM12 7.10678C14.6984 7.10678 16.8936 9.30195 16.8936 12C16.8936 14.698 14.698 16.8936 12 16.8936C9.30195 16.8936 7.10678 14.6984 7.10678 12C7.10678 9.30195 9.30195 7.10678 12 7.10678ZM12 9.17456C10.4425 9.17456 9.17421 10.4421 9.17421 11.9996C9.17421 13.5579 10.4425 14.8258 12 14.8258C13.5582 14.8258 14.8254 13.5579 14.8254 11.9996C14.8254 10.4425 13.5579 9.17456 12 9.17456ZM17.0509 5.80297C17.6892 5.80297 18.2086 6.32238 18.2086 6.96073C18.2086 7.59909 17.6892 8.1185 17.0509 8.1185C16.4122 8.1185 15.8928 7.59909 15.8928 6.96073C15.8928 6.32238 16.4122 5.80297 17.0509 5.80297Z" fill="#5E626B" />
                        </svg>
                      </a>
                    </li>
                  {% endif %}
                </ul>
              </dd>
            </dl>
          {% elsif block.type == 'Menu' %}
            <dl class="footer__section">
              {% if block.settings.footer_menu_heading_id != blank %}
                <dt class="footer__title">{{ block.settings.footer_menu_heading_id }}</dt>
              {% endif %}

              {% assign menu = block.settings.footer_menu_id %}
              {% if menu.links.size > 0 %}
                <dd class="footer__descr">
                  <ul class="footer__list" role="list">
                    {% for link in menu.links %}
                      <li class="footer__item">
                        <a class="link footer__link" href="{{ link.url }}">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </dd>
              {% endif %}
            </dl>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    <div class="footer__bottom">
      <p class="footer__text">
        <small>Â© Susparsa 2021</small>
      </p>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "max_blocks": 4,
    "blocks": [
      {
        "type": "About",
        "name": "About",
        "settings": [
          {
            "type": "text",
            "id": "footer_about_heading_id",
            "label": "Heading",
            "default": "Heading"
          }, {
            "type": "richtext",
            "id": "footer_about_text_id",
            "label": "Text"
          }, {
            "type": "text",
            "id": "footer_about_fb_link_id",
            "label": "Facebook link",
            "default": "#facebook_link"
          }, {
            "type": "text",
            "id": "footer_about_instagram_link_id",
            "label": "Instagram link",
            "default": "#instagram_link"
          }
        ]
      }, {
        "type": "Menu",
        "name": "Menu",
        "settings": [
          {
            "type": "text",
            "id": "footer_menu_heading_id",
            "label": "Heading",
            "default": "Heading"
          }, {
            "type": "link_list",
            "id": "footer_menu_id",
            "label": "Menu"
          }
        ]
      }
    ],
    "settings": []
  }
{% endschema %}