<footer class="footer">
  <div class="container footer__container">
    {% if section.blocks.size > 0 %}
      <div class="footer__top">
        {% for block in section.blocks %}
          {% if block.type == 'About' %}
            {% render 'footer_about_block', block: block %}
          {% elsif block.type == 'Menu' %}
            {% render 'footer_menu_block', block: block %}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    <div class="footer__bottom">
      <p class="footer__text">
        <small>&copy; {{ "accessibility.copyright_text" | t }}</small>
      </p>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "max_blocks": 4,
    "blocks": [
      {
        "type": "About",
        "name": "About",
        "settings": [
          {
            "type": "text",
            "id": "footer_about_heading",
            "label": "Heading",
            "default": "Heading"
          }, {
            "type": "richtext",
            "id": "footer_about_text",
            "label": "Text"
          }, {
            "type": "text",
            "id": "footer_about_fb_link",
            "label": "Facebook link",
            "default": "#facebook_link"
          }, {
            "type": "text",
            "id": "footer_about_instagram_link",
            "label": "Instagram link",
            "default": "#instagram_link"
          }
        ]
      }, {
        "type": "Menu",
        "name": "Menu",
        "settings": [
          {
            "type": "text",
            "id": "footer_menu_heading",
            "label": "Heading",
            "default": "Heading"
          }, {
            "type": "link_list",
            "id": "footer_menu",
            "label": "Menu"
          }
        ]
      }
    ],
    "settings": []
  }
{% endschema %}